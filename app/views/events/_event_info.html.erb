
<div data-controller="event-info">
 <div class="events-info-all-container">
  <div class="event-info-end" data-event-info-target="info" data-end="<%= @event.end_at %>">
   <div class="events-infos-container"  data-event-info-target="event" data-start="<%= @event.start_at %>">
     <div class="events-info-description" data-event-info-target="eventBox" >
       <div class="d-flex">
          <h5 ><div class="event-icon"><i class="fas fa-calendar-alt"></i></div>
            <h5 class="event-i"><%= @event.start_at.strftime("%d %b %Y %H:%M") %>~<%= @event.end_at.strftime("%H:%M") %></h5>
            </h5>
        </div>
<div class="d-flex">
    <h5><div class="event-icon"><i class="fas fa-clock"></i></div>
        <h5 class="event-i"><h5 id="RealtimeCountdownArea" ></h5><h5>
        </h5 >
       </div>
<div class="d-flex">
    <h5><div class="event-icon"><i class="fas fa-building"></i></div>
        <h5 class="event-i"><%= @event.venue.name %><h5>
        </h5 >
       </div>       
<div class="d-flex">
    <h5><div class="event-icon"><i class="fas fa-map-marker-alt"></i></div>
     <h5 class="event-i"><%= @event.venue.address %></h5>
    </h5>
   </div>
</div>
  <div class="event-about" data-event-info-target="eventAbout">
     <div class="event-about-info">
        <h3><i class="fas fa-music"></i>Event About</h3>
          <h5 class="event-d-about"><%= @event.description %></h5>
        </div>
       </div> 
        </div>
    </div>
</div>

