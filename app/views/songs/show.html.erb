<div class ="background-home">
 <div class="center-song-show-container">
   <div class="song-show-container">
   <div class="song-show">
     <h1><%= @song.name %></h1>

    <section class="glide">
     <div class="glide__track" data-glide-el="track"> 
        <ul class="glide__slides">
          <% @song.images.each do | image | %>
            <li class="glide__slide"><%= image_tag(image) %></li>
          <% end %>
        </ul>
       </div>
    </section>  
     </div>
   </div>
  </div>
   <div class="song-show-container">
    <div class="song-show-piece">
       <h2><i class="fas fa-music"></i>About pieces</h2>
        <p><%= @song.description %></p>  
     </div>
   </div>
    <div class="song-show-container">
    <div class="song-show-artist">
       <h2><i class="fas fa-music"></i>Artists Profile</h2>
     </div>
   </div>
</div>
